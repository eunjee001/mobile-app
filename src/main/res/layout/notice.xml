<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  공지사항"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textColor="#064509"
        android:drawableStart="@drawable/ic_baseline_check_circle_outline_24"
        android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
        android:background="#C0E694"
        android:textStyle="bold"
        android:id="@+id/notice"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0E694">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="manager"
            android:layout_gravity="center"
            android:padding="3dp"
            android:layout_marginLeft="8dp"
            android:textColor="#064509"
            android:textColorHint="#ffffff"
            android:id="@+id/nameText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2021-10-24"
            android:layout_gravity="center"
            android:padding="3dp"
            android:textColor="#064509"
            android:textColorHint="#ffffff"
            android:id="@+id/dateText"/>

    </LinearLayout>
</LinearLayout>